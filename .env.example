# Variables de entorno para el Frontend Angular
# Copia este archivo a .env y ajusta las URLs según tu entorno

# API Backend principal (Spring Boot)
NG_APP_API_URL=http://localhost:8081/mrp/

# API Machine Learning (FastAPI)
NG_APP_ML_API_URL=http://localhost:8000

# Configuración de Stripe
NG_APP_STRIPE_PUBLIC_KEY=tu_clave_stripe_aqui

# Configuración de OpenAI (REEMPLAZA CON TU API KEY)
NG_APP_OPENAI_API_KEY=sk-tu_openai_api_key_aqui

# Configuración de desarrollo
NG_APP_ENVIRONMENT=development

